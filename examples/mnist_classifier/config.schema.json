{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "val_split": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "required": [
        "val_split"
      ]
    },
    "training": {
      "type": "object",
      "properties": {
        "batch_size": {
          "type": "integer",
          "minimum": 1
        },
        "lr": {
          "type": "number",
          "minimum": 0
        },
        "lr_gamma": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": [
        "batch_size",
        "lr",
        "lr_gamma"
      ]
    }
  },
  "required": [
    "data",
    "training"
  ]
}
